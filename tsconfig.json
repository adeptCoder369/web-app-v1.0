{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/new-page/page.js", "components/studentManagement/listStudent.jsx", "components/FeeSummary/FeeSection.tsx", "components/profile/ProfileSelection.js", "components/staffManagement/AddStaffPersonalInfo.js", "components/staffManagement/addStaffForm.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
